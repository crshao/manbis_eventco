<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterVendor"
    android:background="@drawable/background_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60dp"
        android:background="@color/pink"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="8">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="List_Vendor"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/layout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/logo_location"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Location_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logo_location"
                    android:text="Location"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo_location"
                    android:layout_below="@+id/Location_sub"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:textSize="8sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_location"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/logo_date"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_date_range_filter_color_24dp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Date_Sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logo_date"
                    android:text="Event Date"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo_date"
                    android:layout_below="@+id/Date_Sub"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/budget_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_date"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/logo_budget"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_attach_money_filter_color_24dp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/budget_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logo_budget"
                    android:text="Budget"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo_budget"
                    android:layout_below="@+id/budget_sub"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:inputType="number"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/budget_layout"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/logo_filter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_check_circle_filter_color_24dp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/filter_sub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logo_filter"
                    android:text="Filter"
                    android:fontFamily="@font/opensanslight"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:letterSpacing="0.1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo_filter"
                    android:layout_below="@+id/filter_sub"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background"
                        android:textSize="12sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_layout"
                android:layout_margin="20dp"
                android:text="Search"
                android:letterSpacing="0.5"
                android:backgroundTint="@color/logo_filter" />
        </RelativeLayout>




    </LinearLayout>

</RelativeLayout>