<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookVendor"
    android:background="@drawable/background_1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nama_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Nama Vendor"/>
            <ImageView
                android:id="@+id/image_vendor"
                android:layout_margintop ="20dp"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_below="@id/nama_vendor"
                android:src="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop = "20dp"
            android:layout_gravity="bottom">
            <LinearLayout
                android:id="@+id/detail_vendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/nama_vendor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="6"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:text="Details Vendor"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/price_vendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_vendor1"
                    android:textAlignment="center"
                    android:text="Rp. ......."/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jenis_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/detail_vendor">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/BankTransferSub"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price_vendor"
                    android:textAlignment="textStart"
                    android:text="Bank Transfer : "/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/jenisBank"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BankTransferSub"
                    android:textAlignment="textStart"
                    android:text="Mandiri "/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/jenis_pembayaran">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/VirtualAccountSub"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price_vendor"
                    android:textAlignment="textStart"
                    android:text="Virtual Account "/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/noVirtualAccount"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/BankTransferSub"
                    android:textAlignment="textStart"
                    android:text="1258300920 "/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/background"
                android:text="I have Complete Payment"
                android:textAlignment="center"
                android:textColor="@color/black" />

        </RelativeLayout>
    </LinearLayout>




</LinearLayout>